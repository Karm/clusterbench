<!DOCTYPE jboss-web PUBLIC
          "-//JBoss//DTD Web Application 5.0//EN"
          "http://www.jboss.org/j2ee/dtd/jboss-web_5_0.dtd">

<jboss-web>

    <context-root>clusterbench</context-root>

    <replication-config>
        <!-- The default value is SET_AND_NON_PRIMITIVE_GET, therefore the 
            byte array which is carrying the data is considered non-primitive and would 
            cause replication even in read only scenario. -->
        <replication-trigger>SET</replication-trigger>

        <!-- Replicating entire session is the default. -->
        <replication-granularity>SESSION</replication-granularity>
    </replication-config>

